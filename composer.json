{
    "name": "decodelabs/exemplar",
    "description": "Powerful XML tools",
    "type": "library",
    "keywords": ["markup", "xml"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2|^8.0",

        "decodelabs/elementary": "^0.1",
        "decodelabs/exceptional": "^0.3",
        "decodelabs/glitch-support": "^0.3",
        "decodelabs/collections": "^0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^0.12.45",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.4",
        "symplify/easy-coding-standard": "^8.3",

        "decodelabs/atlas": "^0.8"
    },
    "suggest": {
        "decodelabs/atlas": "Save generated XML to file"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Exemplar\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
